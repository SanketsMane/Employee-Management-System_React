# Development Environment Configuration
# Copy this file to .env.dev for development deployment

# Application Version
VERSION=latest

# MongoDB Configuration (Use your development database)
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/ems-dev?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-make-it-long-and-secure-for-development
JWT_EXPIRE=24h

# Email Configuration (Development)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-dev-email@gmail.com
EMAIL_PASS=your-dev-app-password
EMAIL_FROM=your-dev-email@gmail.com

# Frontend URL (Development)
FRONTEND_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WEBSOCKET_URL=ws://localhost:8000
VITE_APP_NAME=EMS Development

# Cloudinary Configuration (Development)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your-dev-cloud-name
CLOUDINARY_API_KEY=your-dev-api-key
CLOUDINARY_API_SECRET=your-dev-api-secret

# Security Configuration (Relaxed for development)
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=1000

# Development specific
NODE_ENV=development
DEBUG=true